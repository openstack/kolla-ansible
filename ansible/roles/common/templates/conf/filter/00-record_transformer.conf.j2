<filter *.var.log.kolla.*.*.log>
    @type record_transformer
    <record>
        Hostname ${hostname}
        Logger openstack.${tag_parts[4]}
        programname ${tag_parts[5]}
    </record>
</filter>

<filter infra.*>
    @type record_transformer
    <record>
        Hostname ${hostname}
        programname ${tag_parts[1]}
    </record>
</filter>

<filter syslog.local0.**>
    @type record_transformer
    <record>
        programname swift
    </record>
</filter>

<filter syslog.local1.**>
    @type record_transformer
    <record>
        programname haproxy
    </record>
</filter>
