{
    "command": "trove-taskmanager --config-file=/etc/trove/trove-taskmanager.conf",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/trove-taskmanager.conf",
            "dest": "/etc/trove/trove-taskmanager.conf",
            "owner": "trove",
            "perm": "0600"
        },
        {
            "source": "{{ container_config_directory }}/trove-guestagent.conf",
            "dest": "/etc/trove/trove-guestagent.conf",
            "owner": "trove",
            "perm": "0600"
        }{% if trove_policy_file is defined %},
        {
            "source": "{{ container_config_directory }}/{{ trove_policy_file }}",
            "dest": "/etc/trove/{{ trove_policy_file }}",
            "owner": "trove",
            "perm": "0600"
        }{% endif %}
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/trove",
            "owner": "trove:trove",
            "recurse": true
        },
        {
            "path": "/var/lib/trove",
            "owner": "trove:trove",
            "recurse": true
        }
    ]
}
